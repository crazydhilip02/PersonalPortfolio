rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow public writes to appointments (chatbot booking)
    match /appointments/{appointmentId} {
      allow write: if true;
    }
    
    // Allow public writes to guestbook
    match /guestbook/{entryId} {
      allow write: if true;
    }
    
    // Allow authenticated users to write to projects collection
    match /projects/{projectId} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write to content collection
    match /content/{docId} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write to categories
    match /categories/{categoryId} {
      allow write: if request.auth != null;
    }
  }
}
